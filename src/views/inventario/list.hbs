
<div class="container p-4">
    <div class="row">
        {{#each inventory}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title" text-uppercase>{{ invName }}</h3>
                        <p class="m-2">{{ invModel }}</p>
                        <a href="/inventario/delete/{{idInv}}" class="btn btn-danger">Borrar Producto</a>
                        <a href="/inventario/edit/{{idInv}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>Aun no hay productos en el inventario.</p>
                    <a href="/inventario/add">Guarda uno ahora!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>